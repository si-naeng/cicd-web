doctype html
html
    head
        meta(charset='utf-8')
        title 로그인
        link(rel='stylesheet', href='https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css')
    body
        .container
            h1 로그인
            form(method="post", action="/login")
                div.form-group
                    label(for="id") ID
                    input#id.form-control(type="text", name="id", required)
                div.form-group
                    label(for="password") Password
                    input#password.form-control(type="password", name="password", required)
                button.btn.btn-primary(type="submit") 로그인
                a.btn.btn-secondary(href='/') 취소
