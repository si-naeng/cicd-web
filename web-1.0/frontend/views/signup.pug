doctype html
html
    head
        meta(charset='utf-8')
        title 회원가입
        link(rel='stylesheet', href='https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css')
    body
        .container
            h1 회원가입
            form(method="post", action="/signup")
                div.form-group
                    label(for="id") ID
                    input#id.form-control(type="text", name="id", required)
                div.form-group
                    label(for="password") Password
                    input#password.form-control(type="password", name="password", required)
                div.form-group
                    label(for="name") 이름
                    input#name.form-control(type="text", name="name", required)
                button.btn.btn-primary(type="submit") 회원가입
                a.btn.btn-secondary(href='/') 취소
